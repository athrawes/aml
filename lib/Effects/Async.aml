Effect = use "Control/Effect"

module Async extends Effect

type Resolved<'a>
type Pending<'a> of (_ -> Resolved<'a>)

type Async<'a> =
  | Resolved<'a>
  | Pending<'a>

from = Resolved

then : Async<'a> -> ('a -> Async<'b>) -> Async<'b>
then = async callback ->
  match async
  | Resolved (_) => callback async
  | Pending (suspended) => Pending (_ -> then (suspended _) callback)
