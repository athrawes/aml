pipe : 'a -> ('a -> 'b) -> 'b
pipe = argument callback -> callback argument

(|>) = pipe
(<|) = flip (|>)

compose : ('a -> 'b) -> ('b -> 'c) -> ('a -> 'c)
compose = a_to_b b_to_c ->
  a -> a |> a_to_b |> b_to_c

(>>) = compose
(<<) = flip (>>)

flip : ('a -> 'b -> 'c) -> ('b -> 'a -> 'c)
flip = callback ->
  b a -> callback a b

id : 'a -> 'a
id = a -> a
